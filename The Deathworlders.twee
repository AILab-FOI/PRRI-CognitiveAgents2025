:: StoryScript [script]
function typeWriter(elementId, text, speed, callback) {
  let i = 0;
  let element = document.getElementById(elementId);

  if (!element) {
    console.error(`Element s ID-jem "${elementId}" nije pronaƒëen.`);
    return; 
  }

  element.innerHTML = "";

  function writeText() {
    if (i < text.length) {
      element.innerHTML += text.charAt(i);
      i++;
      setTimeout(writeText, speed);
    } else if (callback) {
      callback();
    }
  }

  writeText();
}

